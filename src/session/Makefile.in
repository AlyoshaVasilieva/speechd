prefix = @prefix@
datadir = @datadir@
sysconfdir = @sysconfdir@
datarootdir = @datarootdir@
bash_profile_dir = @BASH_PROFILE_DIR@
speechd_default_port = $(shell grep SPEECHD_DEFAULT_PORT ../../intl/def.h | awk '{print $$3}')

all:
ifneq ($(ENABLE_SESSION_TRUE), "")
	sed -e "s/@SPEECHD_DEFAULT_PORT@/$(speechd_default_port)/" speechd-user-port.sh.in > speechd-user-port.sh
endif

install:
ifneq ($(ENABLE_SESSION_TRUE), "")
	install -d -o root -m 755 $(DESTDIR)/$(bash_profile_dir)
	install -o root -m 644 speechd-user-port.sh $(DESTDIR)/$(bash_profile_dir)
endif

uninstall:
	rm -f $(DESTDIR)/$(bash_profile_dir)/speechd-user-port.sh

clean:
	rm -f speechd-user-port.sh

distclean: clean

maintainer-clean: clean

distdir:

check:

