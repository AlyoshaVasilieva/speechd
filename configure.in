dnl Process this file with autoconf to produce a configure script.
AC_INIT(configure.in)

dnl progs
AC_PROG_CC

dnl info
AM_INIT_AUTOMAKE(speechd, "`cat version.sh|grep '^VERSION'|awk -F= '{print $2}'`")

AM_CONFIG_HEADER(config.h)

dnl Checks for libraries.
AC_CHECK_LIB(dl, main)
AC_CHECK_LIB(dotconf, main)
AC_CHECK_LIB(glib-2.0, main)
AC_CHECK_LIB(ncurses, main)
AC_CHECK_LIB(pthread, pthread_create)
AC_CHECK_LIB(flite, flite_init)
AC_CHECK_LIB(flite_cmu_us_kal, register_cmu_us_kal)
AC_CHECK_LIB(flite_usenglish, usenglish_init)
AC_CHECK_LIB(flite_cmulex, cmu_lex_init)
AC_CHECK_LIB(recode, main)

glib_include=`pkg-config --cflags glib-2.0`
AC_SUBST(glib_include)
glib_libs=`pkg-config --libs glib-2.0`
AC_SUBST(glib_libs)
sysconfdir="$sysconfdir/speechd" 
AC_SUBST(sysconfdir)
snddatadir="$datadir/sounds/speechd" 
AC_SUBST(snddatadir)

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(limits.h sys/ioctl.h sys/time.h unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_HEADER_TIME

dnl Checks for library functions.
AC_PROG_GCC_TRADITIONAL
AC_CHECK_FUNCS(select socket)

AC_PROG_INSTALL
AC_PROG_MAKE_SET

AM_PROG_LIBTOOL

AC_OUTPUT([Makefile src/Makefile src/server/Makefile src/modules/Makefile src/c/Makefile src/c/api/Makefile src/c/clients/Makefile src/c/clients/say/Makefile src/c/clients/spd-center/Makefile src/tests/Makefile src/audio/Makefile config/Makefile config/en/Makefile sounds/Makefile])

